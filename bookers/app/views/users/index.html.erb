
<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-2">
		<h2>User info</h2>
		<%= render "users/information", user: current_user  %>

		<h2>New book</h2>
		<%= render "books/newbook", book: @book  %>
	</div>
	
	<div class="col-xs-9">
		<h1>Users</h1>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody class="body">
	
			<% @users.each do |user| %>

				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image_mini.jpg" %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "Show", user_path(id: user.id) %>
					</td>
				</tr>  

			<% end %>

			</tbody>   
		</table>
	</div>
</div>
