
<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-2">
		<h2>User info</h2>
			<%= render 'users/information', user: @user %>

		<h2>New book</h2>	
			<%= render 'books/newbook', book: @book %>
	</div>

	<div class="col-xs-9">
		<h1>Books</h1>

		<table class="table">
			<thead class="icon">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>

			<tbody class="body">

			<% @user.books.each do |book| %>

				<tr>
					<td><%= link_to (@user) do %>
						<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image_mini.jpg", class: "image" %>
					</td>
					<% end %>
					<td>
						<%= link_to book.title, book %>
					</td>
					<td>
						<%= book.body %>
					</td>
				</tr>  

			<% end %>

			</tbody>   
		</table>
	</div>
</div>
