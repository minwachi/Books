
<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-2">
		<h2>User info</h2>
			<%= render 'users/information', user: current_user %>

		<h2>New book</h2>
			<%= render 'books/newbook', book: @book %>
	</div>

	<div class="col-xs-9">
		<h1>Book detail</h1>

		<table class="table">
			<tbody class="body">

				<tr>
					<td>
						<%= link_to (@bookdetail.user) do %>
							<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image_mini.jpg" %><br>
							<%= @bookdetail.user.name %>
						<% end %>
					</td>
					<td>
						<%= link_to @bookdetail.title, @bookdetail %>
					</td>
					<td>
						<%= @bookdetail.body %>
					</td>
					<td>
						<% if @bookdetail.user == current_user %>
						<%= link_to "Edit", edit_book_path %>
					</td>
					<td>
						<%= link_to "Destroy", @bookdetail , method: :delete, data:{confirm: "本当に消しますか？"}  %>
					</td>
					<% end %>
				</tr>  

			</tbody>   
		</table>
	</div>
</div>
